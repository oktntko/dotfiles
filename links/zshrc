# --------------------------------------------------------------------------------
# init
# --------------------------------------------------------------------------------
## Powerlevel10k
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi
## linuxbrew
eval $($HOME/.linuxbrew/bin/brew shellenv)
## asdf
source $HOME/.asdf/asdf.sh
## zplug
export ZPLUG_HOME="$HOME/.zplug"
source $ZPLUG_HOME/init.zsh
# --------------------------------------------------------------------------------
# PATH
# --------------------------------------------------------------------------------

# --------------------------------------------------------------------------------
# zplug
# --------------------------------------------------------------------------------
## plugins
zplug "romkatv/powerlevel10k", as:theme, depth:1       # プロンプトのカスタマイズ
zplug "zsh-users/zsh-syntax-highlighting", defer:2     # コマンドに色付けする
zplug "zsh-users/zsh-autosuggestions"                  # 薄い色で直近の履歴を表示する
zplug "zsh-users/zsh-completions"                      # 補完を詳細に表示する
zplug "Aloxaf/fzf-tab"                                 # fzf で 入力補完を強化する
zplug "b4b4r07/enhancd", use:init.sh                   # fzf で cd を強化する

# --------------------------------------------------------------------------------
# os差分
# --------------------------------------------------------------------------------
if [[ -n $(uname | grep -i 'Darwin') ]] ; then
  # 'MacOS'

elif [[ -n $( uname | grep -i 'Linux' ) ]] && [[ -z $( uname -r | grep -i 'microsoft' ) ]] ; then
  # 'Linux'

elif [[ -n $( uname | grep -i 'Linux' ) ]] && [[ -n $( uname -r | grep -i 'microsoft' ) ]] ; then
  # 'WSL'
  ## ディスプレイ設定
  export WSL_ip_line=$(ipconfig.exe | grep "WSL" -n | awk -F ":" '{print $1+4}')
  export DISPLAY=$(ipconfig.exe | awk -v a=$WSL_ip_line '{if (NR==a) print $NF":0.0"}' | tr -d "\r")
  export WINDOWS_USERNAME=$(cd /mnt/c && cmd.exe /c 'echo %USERNAME%' | awk '{ print $1 }' | tr -d "\r")

else
  # 'Windows'

fi

# --------------------------------------------------------------------------------
# 各設定ファイル
# --------------------------------------------------------------------------------
# link
for file in $HOME/.dotfiles/tag-zsh/*.zsh(.N); do
  source $file
done

# --------------------------------------------------------------------------------
# local用
# --------------------------------------------------------------------------------
[[ ! -f ~/.zshrc.local ]] || source ~/.zshrc.local

# --------------------------------------------------------------------------------
# zplug install
# --------------------------------------------------------------------------------
zplug check --verbose || zplug install
zplug load

# --------------------------------------------------------------------------------
# asdf
# --------------------------------------------------------------------------------
# python
export PIPENV_VENV_IN_PROJECT=true
